.side
  .side__top
    .side__top__name
      = current_user.name
    .side__top__icon
      .side__top__icon--edit
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'side__top__icon--color')
      .side__top__icon--cog
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side__top__icon--color')

  .side__group
    - current_user.groups.each do |group|
      .side__group__one
        = link_to '#' do
          .side__group__one--grp-name
            = group.name
          .side__group__one--last-msg
            メッセージはまだありません